@model List<FoodApp.Areas.Cart.Models.Cart>

@{
    ViewBag.Title = "Shopping Cart";
    Layout = "_Layout";
}

<div class="pagetitle">
    <h1>Items you are looking for</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Item Price</th>
            <th>Restaurant Name</th>
            <th>Restaurant Address</th>
            <th>Quantity</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@string.Format("{0:C}", item.ItemPrice)</td> <!-- Format item price as currency -->
                <td>@item.RestaurantName</td>
                <td>@item.RestaurantAddress</td>
                <td>@item.Quantity</td>
                <td>@item.Address</td>
                <td>
                    <a asp-area="Cart" asp-controller="Cart" asp-action="Delete" asp-route-CartID="@item.CartID" class="btn btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7" class="text-center">
                <button id="placeOrderBtn" class="btn btn-outline-success">Place Order</button>
            </td>
        </tr>
    </tfoot>
</table>

<script>
    document.getElementById("placeOrderBtn").addEventListener("click", function () {
        Swal.fire({
            title: "Order Placed!",
            text: "Your order has been successfully placed.",
            icon: "success",
            confirmButtonText: "OK"
        });
    });
</script>
