@model FoodApp.Areas.Item.Models.Item

@{
    Layout = "_Layout";
}

<h1>Add Item</h1>

<div class="row">
    <div class="col-md-6">
        <hr />
        <form asp-area="Item" asp-controller="Item" asp-action="Save" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(x => x.ItemID)

            <div class="form-group">
                <label asp-for="RestaurantID" class="control-label">Restaurant</label>
                <select class="form-control" required asp-for="RestaurantID" asp-items="@(new SelectList(ViewBag.RestorantList, "RestaurantID", "RestaurantName"))">
                    <option value="">Select restaurant</option>
                </select>
                <span asp-validation-for="RestaurantID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemName" class="control-label">Item Name</label>
                <input asp-for="ItemName" class="form-control" />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemDescription" class="control-label">Description</label>
                <input asp-for="ItemDescription" class="form-control" />
                <span asp-validation-for="ItemDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemPrice" class="control-label">Price</label>
                <input asp-for="ItemPrice" class="form-control" />
                <span asp-validation-for="ItemPrice" class="text-danger"></span>
            </div>
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <button type="submit" class="btn btn-outline-success px-4">Submit</button>
                            <a asp-action="Index" class="btn btn-outline-info px-4">Back to List</a>
                        </div>
        </form>
    </div>
</div>

